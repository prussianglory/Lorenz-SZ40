                        <GradientStop Color="White" Offset="0.548"/>
                        <GradientStop Color="#FFE6E6E6" Offset="1"/>
                        <GradientStop Color="#FFCDCDCD" Offset="0.109"/>
                        <GradientStop Color="#FFC1C1C1" Offset="0.042"/>
                        <GradientStop Color="#FFA8A8A8" Offset="0.891"/>
