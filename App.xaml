<Application x:Class="CW___SZ4042.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CW___SZ4042"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="Glass" EndPoint="1,0.3" StartPoint="0,1">
            <GradientStop Color="#8CFFFFFF" Offset="0"/>
            <GradientStop Color="#76FFFFFF" Offset="1"/>
            <GradientStop Offset="0.285"/>
            <GradientStop Color="#6CFFFFFF" Offset="0.397"/>
            <GradientStop Offset="0.774"/>
        </LinearGradientBrush>

        <Style x:Key="LetterStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
