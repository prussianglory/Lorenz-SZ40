        </Style>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>            
        </Style>
        <Style x:Key="PsiLabelLetterStyle" TargetType="Label">
